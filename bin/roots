#!/usr/bin/env node

require('coffee-script/register');
var cli = new (require('../lib/cli')),
    notifier = require('update-notifier')({ packagePath: '../package.json' });

// new version notification
notifier.update && notifier.notify();

// log out data
cli.emitter.on('data', console.log.bind(console));
cli.emitter.on('inline', process.stdout.write.bind(process.stdout))
cli.emitter.on('err', function(err){ console.error(err); process.exit(1); });

cli.run(process.argv.slice(2));
